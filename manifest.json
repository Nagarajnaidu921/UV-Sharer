{
  "manifest_version": 2,

  "name": "UV Sharer",
  "description": "This extension is to share your current page with social networks",
  "version": "0.1",
 
 "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "sharer.html",
    "default_title": "Click To SHare This Page!"
  },

  "icons": {
    "16":"icons/icon.png",
    "48":"icons/icon.png",
    "128":"icons/icon.png"
  }, 
  
  "permissions": [
  	"tabs",
    "activeTab"
  ]
}